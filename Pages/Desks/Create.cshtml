@{
    
    ViewData["Title"] = "Create a new Quote";
    var DateNow = DateTime.Today;
   
}



<h4>Add A New Quote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="POST">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Desk.Name" class="control-label"></label>
                <input asp-for="Desk.Name" class="form-control" />
                <span asp-validation-for="Desk.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.Width" class="control-label"></label>
                <input asp-for="Desk.Width" class="form-control" name="width" />
                <span asp-validation-for="Desk.Width" name="width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.Depth" class="control-label"></label>
                <input asp-for="Desk.Depth" name="depth" class="form-control" />
                <span asp-validation-for="Desk.Depth" class="text-danger"></span>
            </div>


            <!--javascript dropdown options-->
            <!-- <div class="container"> -->

            <div class="select-box">
                <div class="options-container">

                    <div class="option">

                        <label asp-for="Desk.Material"><img src="~/images/laminate.jpg" />Laminate</label>
                        <input name="material" class="radio" />
                        

                    </div>

                    <div class="option">
                        <input asp-for="Desk.Material" class="radio" id="film" />
                        <label asp-for="Desk.Material"><img src="~/images/oak.jpg" />Oak</label>
                    </div>

                    <div class="option">
                        <input type="radio" class="radio" id="science" name="material" />
                        <label asp-for="Desk.Material"><img src="~/images/pine.jpg" />Pine</label>
                    </div>

                    <div class="option">
                        <input type="radio" class="radio" id="art" name="category" />
                        <label asp-for="Desk.Material"><img src="~/images/rosewood.jpg" />rosewood</label>
                    </div>

                    <div class="option">
                        <input type="radio" class="radio" id="material"/>
                        <label for="Desk.Material" name="material"><img src="~/images/venner.jpg" />Veneer</label>
                    </div>

                    <span asp-validation-for="Desk.Material" class="text-danger"></span>

                </div>

                <div class="selected">
                    Desk Surface Material:
                </div>
            </div>
            <script src="~/js/main.js"></script>



